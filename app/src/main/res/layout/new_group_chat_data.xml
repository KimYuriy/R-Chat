<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <EditText
        android:id="@+id/etChatName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Название чата"
        android:inputType="text" />

    <CheckBox
        android:id="@+id/cbWorkChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Рабочий чат"
        android:checked="false" />

    <LinearLayout
        android:id="@+id/llWorkTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Время начала работы"
            android:padding="8dp" />

        <TimePicker
            android:id="@+id/tpStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Время окончания работы"
            android:padding="8dp" />

        <TimePicker
            android:id="@+id/tpEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner" />
    </LinearLayout>
</LinearLayout>
